<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addNotice"
    android:orientation="vertical"
    android:background="@drawable/student_back2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/jost"
                android:text="Add Notice"
                android:textColor="@color/black"
                android:paddingTop="20dp"
                android:textSize="25sp" />


        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">


            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/w_rectangle"
                android:fontFamily="@font/jost"
                android:paddingLeft="20dp"
                android:hint="Title"
                android:textColor="@color/black"
                android:id="@+id/title"
                android:textSize="15sp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jost"
                android:hint="Description"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:gravity="top"
                android:id="@+id/description"
                android:background="@drawable/w_rectangle2"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:elevation="4dp"
                />

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:background="@drawable/w_rectangle2"
                android:layout_gravity="center_horizontal"
                android:paddingLeft="15dp">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/jost"
                        android:gravity="top"
                        android:paddingTop="15dp"
                        android:text="From"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/datefrom"
                        android:layout_width="253dp"
                        android:layout_height="33dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/g_rectangle"
                        android:calendarTextColor="@color/white"
                        android:ems="10"
                        android:focusable="false"
                        android:gravity="center_horizontal"
                        android:hint="DD/MM/YYYY"
                        android:inputType="date"></EditText>

                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/jost"
                        android:gravity="top"
                        android:paddingTop="15dp"
                        android:text="To"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <EditText
                        android:layout_width="253dp"
                        android:layout_height="33dp"
                        android:id="@+id/dateto"
                        android:calendarTextColor="@color/white"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/g_rectangle"
                        android:ems="10"
                        android:hint="DD/MM/YYYY"
                        android:inputType="date"
                        android:focusable="false"
                        android:gravity="center_horizontal"></EditText>

                </TableRow>


            </TableLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btn_save"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/y_rectangle"
                    android:text="Save"></Button>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>