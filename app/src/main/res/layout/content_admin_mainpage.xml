<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".admin_mainpage"
    android:background="#cccccc"
    android:orientation="vertical"
    tools:showIn="@layout/app_bar_admin_mainpage">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="20dp"
        android:elevation="20dp"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#ffeef7f0">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/nav_admin_imageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/profile_nav_logo"
                android:contentDescription="@string/nav_header_desc"
                android:paddingTop="5dp"
                app:civ_border_width="2dp"
                app:civ_border_color="#F7EBEB"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/nav_header_vertical_spacing"
                    android:text="Admin"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                <TextView
                    android:id="@+id/username_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="italic"
                    android:text="admin" />
            </LinearLayout>
        </LinearLayout>
            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:outlineAmbientShadowColor="@color/black"
                android:id="@+id/progressBar"
                android:layout_gravity="center"
                style="?android:attr/progressBarStyle"
                android:layout_centerHorizontal="true"
                android:visibility="gone"/>
    </androidx.cardview.widget.CardView>
    <ScrollView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="20dp"
            android:elevation="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/addstudent_btn"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:layout_marginRight="1dp"
                    android:background="@android:color/holo_red_light"
                    android:gravity="center">
                    <ImageView
                        android:layout_marginBottom="4dp"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/add_student"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Manage Student"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/addfaculty_btn"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginRight="1dp"
                    android:padding="5dp"
                    android:background="@android:color/holo_green_dark"
                    android:gravity="center">
                    <ImageView
                        android:layout_marginBottom="4dp"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/add_student"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Manage Faculty"/>
                </LinearLayout>
                <LinearLayout
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:background="@android:color/holo_blue_light"
                    android:gravity="center">
                    <ImageView
                        android:layout_marginBottom="4dp"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/settimetable"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Set Timetable"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:padding="5dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="1dp"
                android:background="@color/yellow"
                android:gravity="center">
                <ImageView
                    android:layout_marginBottom="4dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/attendance"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="View Attendance"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/addholiday_btn"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginRight="1dp"
                android:layout_marginTop="1dp"
                android:padding="5dp"
                android:background="@android:color/holo_orange_dark"
                android:gravity="center">
                <ImageView
                    android:layout_marginBottom="4dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/public_holliday"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Manage Holiday"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/addsbject_btn"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginTop="1dp"
                android:padding="5dp"
                android:background="@android:color/holo_purple"
                android:gravity="center">
                <ImageView
                    android:layout_marginBottom="4dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/settimetable"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Add Subject"/>
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
        </androidx.cardview.widget.CardView>
    </ScrollView>
</LinearLayout>