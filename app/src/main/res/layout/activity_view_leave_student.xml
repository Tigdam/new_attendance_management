<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".viewLeave_Student"
    android:orientation="vertical"
    android:background="@drawable/student_back2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:textSize="26dp"
            android:text="LEAVE APPLICATION"></TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/w_rectangle"
                android:fontFamily="@font/jost"
                android:paddingLeft="20dp"
                android:hint="Name and Years"
                android:textColor="@color/black"
                android:id="@+id/TitleNameLeave"
                android:textSize="15sp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/w_rectangle"
                android:fontFamily="@font/jost"
                android:paddingLeft="20dp"
                android:hint="title"
                android:textColor="@color/black"
                android:id="@+id/TitleLeave"
                android:textSize="15sp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jost"
                android:hint="description"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:gravity="top"
                android:id="@+id/description"
                android:background="@drawable/w_rectangle2"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:elevation="4dp"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jost"
                android:hint="type_of_leave"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:background="@drawable/w_rectangle"
                android:layout_gravity="center_horizontal"
                android:paddingLeft="20dp"
                android:id="@+id/TypeOfLeave"
                android:layout_marginTop="10dp"
                />


            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:background="@drawable/w_rectangle2"
                android:layout_gravity="center_horizontal"
                android:paddingLeft="15dp">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/jost"
                        android:gravity="top"
                        android:paddingTop="15dp"
                        android:text="From"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/datefrom"
                        android:layout_width="253dp"
                        android:layout_height="33dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/g_rectangle"
                        android:calendarTextColor="@color/white"
                        android:ems="10"
                        android:focusable="false"
                        android:gravity="center_horizontal"
                        android:hint="DD/MM/YYYY"
                        android:inputType="date"></EditText>

                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/jost"
                        android:gravity="top"
                        android:paddingTop="15dp"
                        android:text="To"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <EditText
                        android:layout_width="253dp"
                        android:layout_height="33dp"
                        android:id="@+id/to"
                        android:calendarTextColor="@color/white"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/g_rectangle"
                        android:ems="10"
                        android:hint="DD/MM/YYYY"
                        android:inputType="date"
                        android:focusable="false"
                        android:gravity="center_horizontal"></EditText>

                </TableRow>


            </TableLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/w_rectangle"
                android:layout_gravity="center"
                android:paddingLeft="15dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="10dp">



                    <TextView
                        android:id="@+id/attach_file"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:fontFamily="@font/jost"
                        android:paddingStart="10dp"
                        android:text="Attach File"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/y_rectangle"
                    android:text="Save"></Button>

                <Button
                    android:id="@+id/pdf_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:background="@drawable/y_rectangle"
                    android:text="Upload PDF"></Button>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>